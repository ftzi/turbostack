{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": [
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "NEXT_PUBLIC_URL",
    "NEXT_PUBLIC_EMAIL_DOMAIN",
    "NEXT_PUBLIC_VERCEL_URL",
    "DATABASE_URL",
    "RESEND_API_KEY",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "tsw": {},
    "ts": {
      "dependsOn": ["^ts"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
