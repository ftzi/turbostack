{
  "name": "my-project",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "bun && turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ok": "turbo typecheck lint format",
    "tsw": "turbo tsw",
    "dev:TODO": "bun i && concurrently -c yellow,blue,green -n db,tsw,next, \"bun db:studio\" \"bun tsw --preserveWatchOutput\" \"next dev --turbo\"",
    "format:dry:TODO": "biome check --unsafe && next lint",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "env": "bunx vercel env pull .env"
  },
  "devDependencies": {
    "@types/bun": "1.3.1",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "typescript": "catalog:",
    "prettier": "3.6.2",
    "turbo": "2.6.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2",
      "typescript": "5.9.3",
      "lucide-react": "0.552.0"
    }
  },
  "packageManager": "bun@1.3.1",
  "engines": {
    "node": ">=20"
  }
}
